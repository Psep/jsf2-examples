package cl.ips.gob.sysContratos.managedBean;

import javax.faces.application.FacesMessage;
import javax.faces.bean.ManagedBean;
import javax.faces.bean.RequestScoped;
import javax.faces.context.FacesContext;

import org.jboss.logging.Logger;

@ManagedBean(name="loginBean")
@RequestScoped
public class LoginBean {
	
	private static final Logger logger = Logger.getLogger(LoginBean.class);
	
	private String username;
	private String password;
	
	public LoginBean() {
		this.username = "";
		this.password = "";
	}

	public String getUsername() {
		return username;
	}

	public void setUsername(String username) {
		this.username = username;
	}

	public String getPassword() {
		return password;
	}

	public void setPassword(String password) {
		this.password = password;
	}
	
	public void validaLoginAction() {
		logger.info("entrando al bot√≥n");
		if (this.username != null && this.password != null
				&& !this.username.trim().equals("")
				&& !this.password.trim().equals("")
				&& this.username.trim().equals("psep")
				&& this.password.trim().equals("123456")) {
			FacesContext.getCurrentInstance().addMessage(null, new FacesMessage(FacesMessage.SEVERITY_INFO, "Info", "Login correcto!!!"));
		} else {
			FacesContext.getCurrentInstance().addMessage(null, new FacesMessage(FacesMessage.SEVERITY_ERROR, "Error", "Error en usuario y/o password"));
		}
	}

}
